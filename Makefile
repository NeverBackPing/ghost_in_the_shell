######################## üóÉÔ∏è #############################

%.o: %.c
	@$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@


######################## üé∂üéπ ############################

all: $(NAME) header

header:
	@echo "$(GREEN)$$HEADER$(RESET)"

$(NAME): $(OBJS)
	@$(CC) $(CFLAGS) $(INCLUDES) $(OBJS) -o $(NAME) $(RFLAGS)
	@echo "Compiled ‚úÖ"
	@echo "The program $(NAME) is created ‚úÖ"

clean:
	@$(RM) $(OBJS) $(LIBFT_OBJS) $(PRINTF_OBJS)
	@echo ".o files are destroyed ‚úÖ"

fclean: clean
	@$(RM) $(NAME)
	@echo "Everything is clean ‚úÖ"

re: fclean all

.PHONY: all clean fclean header re
